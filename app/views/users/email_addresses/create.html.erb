<div class="max-w-2xl mx-auto text-center py-12">
  <div class="mb-8">
    <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-blue-100 dark:bg-blue-900">
      <svg class="h-8 w-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
      </svg>
    </div>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4">Check Your Email</h1>
  
  <p class="text-lg text-gray-600 dark:text-gray-400 mb-2">
    We've sent a confirmation link to <strong class="text-gray-900 dark:text-gray-100"><%= @email_address %></strong>
  </p>
  
  <p class="text-sm text-gray-500 dark:text-gray-500 mb-8">
    The link will expire in 30 minutes.
  </p>

  <%= link_to "Back to profile", profile_path, class: "inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300" %>
</div>
